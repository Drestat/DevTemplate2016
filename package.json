{
  "name": "devtemplate",
  "version": "1.0.0",
  "description": "template to start dev projects",
  "dependencies": {},
  "devDependencies": {
    "clean-css": "^3.4.19",
    "http-server": "^0.9.0",
    "jshint": "^2.9.2",
    "mocha": "^3.0.2",
    "uglify-js": "^2.7.1",
    "watch": "^0.19.2"
  },
  "scripts": {
    "info": "echo 'template to start dev projects'",
    "lint": "echo '=> linting' && jshint assets/scripts/*.js",
    "test": "echo '=> testing' && mocha test/",
    "minify:js": "echo '=> minify:js' && uglifyjs assets/scripts/main.js -o dist/public/js/main.min.js",
    "minify:css": "echo '=> minify:css' && cleancss assets/css/main.css -o dist/public/css/main.min.css",
    "build": "echo '=> building' && npm run test -s && npm run minify:js -s && npm run minify:css -s && npm run server -s" ,
    "pretest": "npm run lint -s",
    "server": "http-server dist/public/",
    "watch": "watch 'npm run minify:js && npm run minify:css' assets/scripts/ assets/css/"
  },
  "author": "SitePoint",
  "license": "ISC"
}
